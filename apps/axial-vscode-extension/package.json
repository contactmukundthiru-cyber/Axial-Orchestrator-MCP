{
    "name": "axial-ghost",
    "displayName": "AXIAL Ghost",
    "description": "Ghost-mode integration for AXIAL Command Center",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "AXIAL",
            "properties": {
                "axial.daemonUrl": {
                    "type": "string",
                    "default": "http://127.0.0.1:8080",
                    "description": "URL of the AXIAL background daemon."
                }
            }
        },
        "commands": [
            {
                "command": "axial-ghost.runTask",
                "title": "AXIAL: Run Selection as Task"
            },
            {
                "command": "axial-ghost.showInterface",
                "title": "AXIAL: Open Command Center"
            },
            {
                "command": "axial-ghost.forkSession",
                "title": "AXIAL: Fork Session"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "axial-workforce",
                    "title": "AXIAL",
                    "icon": "$(shield)"
                }
            ]
        },
        "views": {
            "axial-workforce": [
                {
                    "type": "webview",
                    "id": "axial-workforce-view",
                    "name": "Neural Workforce"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "16.x",
        "typescript": "^5.1.3",
        "eslint": "^8.41.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8"
    },
    "dependencies": {
        "axios": "^1.4.0"
    }
}
